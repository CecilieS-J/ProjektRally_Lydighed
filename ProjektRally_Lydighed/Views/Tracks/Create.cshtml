@section Scripts {
    <style>
        .canvas {
            width: 800px;
            height: 600px;
            border: 1px solid #000;
            position: relative;
        }

        .arrow {
            width: 20px;
            height: 20px;
            background-color: #ccc;
            border: 1px solid #000;
            text-align: center;
            line-height: 20px;
            position: absolute;
        }
