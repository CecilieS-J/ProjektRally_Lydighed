@model ProjektRally_Lydighed.Models.Sign

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="SignNumber"></label>
        <input asp-for="SignNumber" class="form-control" />
        <span asp-validation-for="SignNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Exercises</label>
        <select asp-for="SelectedExerciseIds" class="form-control" asp-items="ViewBag.Exercises" multiple="multiple"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
